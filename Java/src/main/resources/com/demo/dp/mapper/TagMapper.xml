<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.dp.mapper.TagMapper">

    <!-- 结果映射 -->
    <resultMap id="TagResultMap" type="com.demo.dp.domain.entity.Tag">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="type" column="type"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <!-- 根据 ID 查询 -->
    <select id="findById" resultMap="TagResultMap">
        SELECT id, name, type, created_at
        FROM tag
        WHERE id = #{id}
    </select>

    <!-- 根据类型查询 -->
    <select id="findByType" resultMap="TagResultMap">
        SELECT id, name, type, created_at
        FROM tag
        WHERE type = #{type}
        ORDER BY created_at DESC
    </select>

    <!-- 查询所有标签 -->
    <select id="findAll" resultMap="TagResultMap">
        SELECT id, name, type, created_at
        FROM tag
        ORDER BY created_at DESC
    </select>

    <!-- 插入标签 -->
    <insert id="insert" parameterType="com.demo.dp.domain.entity.Tag" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tag (name, type, created_at)
        VALUES (#{name}, #{type}, NOW())
    </insert>

</mapper>

