<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.dp.mapper.AiCallLogMapper">

    <!--
        结果映射：将 ai_call_log 表字段映射为 AiCallLog 实体属性
     -->
    <resultMap id="AiCallLogResultMap" type="com.demo.dp.domain.entity.AiCallLog">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="type" column="type"/>
        <result property="prompt" column="prompt"/>
        <result property="responseRef" column="response_ref"/>
        <result property="latencyMs" column="latency_ms"/>
        <result property="status" column="status"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <!-- 插入调用日志 -->
    <insert id="insert" parameterType="com.demo.dp.domain.entity.AiCallLog" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO ai_call_log (user_id, type, prompt, response_ref, latency_ms, status, created_at)
        VALUES (#{userId}, #{type}, #{prompt}, #{responseRef}, #{latencyMs}, COALESCE(#{status}, 1), NOW())
    </insert>

    <!-- 根据 ID 查询日志 -->
    <select id="findById" resultMap="AiCallLogResultMap">
        SELECT id, user_id, type, prompt, response_ref, latency_ms, status, created_at
        FROM ai_call_log
        WHERE id = #{id}
    </select>

    <!-- 统计所有 AI 调用日志总数 -->
    <select id="countAll" resultType="long">
        SELECT COUNT(*)
        FROM ai_call_log
    </select>

    <!-- 根据状态统计 AI 调用日志数量 -->
    <select id="countByStatus" resultType="long">
        SELECT COUNT(*)
        FROM ai_call_log
        WHERE status = #{status}
    </select>

    <!-- 分页查询 AI 调用日志列表（支持多条件筛选） -->
    <select id="findByConditions" resultMap="AiCallLogResultMap">
        SELECT id, user_id, type, prompt, response_ref, latency_ms, status, created_at
        FROM ai_call_log
        <where>
            <if test="type != null and type != ''">
                AND type = #{type}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="userId != null">
                AND user_id = #{userId}
            </if>
        </where>
        ORDER BY created_at DESC
        LIMIT #{offset}, #{limit}
    </select>

    <!-- 统计符合条件的 AI 调用日志总数 -->
    <select id="countByConditions" resultType="long">
        SELECT COUNT(*)
        FROM ai_call_log
        <where>
            <if test="type != null and type != ''">
                AND type = #{type}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="userId != null">
                AND user_id = #{userId}
            </if>
        </where>
    </select>

</mapper>

